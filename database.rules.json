{
  "rules": {
    ".read": false,
    ".write": false,
    "tenants": {
      "$tenantId": {
        ".read": "auth != null && (auth.token.tenantId == $tenantId || auth.token.isSuperAdmin == true)",
        ".write": "auth != null && (auth.token.tenantId == $tenantId || auth.token.isSuperAdmin == true)",

        // Publicly readable settings for client app (read-only)
        "settings": {
          ".read": "true",
          ".write": "auth != null && (auth.token.tenantId == $tenantId || auth.token.isSuperAdmin == true)"
        },

        // Devices configuration (never readable by clients; functions use Admin SDK)
        "devices": {
          ".read": false,
          ".write": "auth != null && auth.token.isSuperAdmin == true"
        }
      }
    }
  }
}

